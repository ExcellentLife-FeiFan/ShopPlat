<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_viewgroup_click"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_medium"
        android:paddingTop="@dimen/default_ui_margin_medium">

        <TextView
            android:id="@+id/tv_poeple_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非凡"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_poeple_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（先生）"
            android:textColor="@color/black_overlay2"
            android:textSize="@dimen/text_size_common" />

        <TextView
            android:id="@+id/tv_poeple_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:text="182****3456"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="】"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="北京市朝阳区某某某某某某地某某某某号"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_common" />


    </LinearLayout>

    <include layout="@layout/line_gray"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_large"
        android:paddingTop="@dimen/default_ui_margin_large">


        <TextView
            android:id="@+id/tv_delete"
            style="@style/Common_Border_Btn"
            android:text="删除" />


        <TextView
            android:id="@+id/tv_edit"
            style="@style/Common_Border_Btn"
            android:layout_marginLeft="@dimen/default_ui_margin_medium"
            android:text="编辑" />


    </LinearLayout>

</LinearLayout>