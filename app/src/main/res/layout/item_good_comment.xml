<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_medium"
        android:paddingTop="@dimen/default_ui_margin_medium">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ"
            android:layout_width="@dimen/data_icon_size"
            android:layout_height="@dimen/data_icon_size"
            android:layout_marginRight="@dimen/default_ui_margin"
            android:src="@drawable/ic_no_people" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_left"
            android:layout_marginTop="@dimen/default_ui_margin_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="匿名用户"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/text_size_common" />


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_ui_margin_large"
                    android:text="2013-03-23"
                    android:textColor="@color/hint_gray"
                    android:textSize="@dimen/text_size_common" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_ui_margin_medium"
                android:text="送货快、服务好、非常棒"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_common" />


            <com.ytxd.spp.ui.views.InGridView
                android:id="@+id/gv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_ui_margin"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>