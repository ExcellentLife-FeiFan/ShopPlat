<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_ui_margin_medium"
    android:paddingTop="@dimen/default_ui_margin_medium">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/data_icon_size_middle"
        android:layout_height="@dimen/data_icon_size_middle"
        android:src="@color/img_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_ui_margin"
        android:layout_marginRight="@dimen/padding_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猪肉炖粉条"
            android:textColor="@color/black_overlay2"
            android:textSize="@dimen/text_size_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_ui_margin_large">


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="@color/black_overlay4"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥38.5"
                android:textColor="@color/price_color"
                android:textSize="@dimen/text_size_common" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>