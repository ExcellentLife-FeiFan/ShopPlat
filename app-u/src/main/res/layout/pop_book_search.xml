<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <include layout="@layout/line_common"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入商品名"
            android:lines="1"
            android:paddingLeft="@dimen/padding_left2"
            android:paddingRight="@dimen/padding_left2"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_common_s" />


    </LinearLayout>


    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_ui_margin"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp75"
        android:divider="@color/common_divider_color"
        android:dividerHeight="@dimen/divider_height" />

</LinearLayout>