<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_viewgroup_click"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_medium"
        android:paddingTop="@dimen/default_ui_margin_medium">

        <TextView
            android:id="@+id/tv_poeple_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:text="@string/null_s"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_poeple_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（先生）"
            android:textColor="@color/black_overlay2"
            android:textSize="@dimen/text_size_common" />

        <TextView
            android:id="@+id/tv_poeple_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:text="@string/null_s"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_large">


        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_ui_margin"
            android:text="默认"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_common_btn"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/null_s"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_common" />


    </LinearLayout>

    <include layout="@layout/line_gray"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_large"
        android:paddingTop="@dimen/default_ui_margin_large">


        <TextView
            android:id="@+id/tv_setdefault"
            style="@style/Common_Border_Btn"
            android:layout_marginLeft="@dimen/default_ui_margin_medium"
            android:text="设为默认"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/Common_Border_Btn"
            android:layout_marginLeft="@dimen/default_ui_margin_medium"
            android:text="删除" />


        <TextView
            android:id="@+id/tv_edit"
            style="@style/Common_Border_Btn"
            android:layout_marginLeft="@dimen/default_ui_margin_medium"
            android:text="编辑" />


    </LinearLayout>

</LinearLayout>