<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ytxd.spp.ui.views.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height" />


    <com.ytxd.spp.ui.views.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_account"
                style="@style/VG_padding">

                <TextView
                    style="@style/TV_VG_LEFT_WC"
                    android:text="账户安全" />


            </RelativeLayout>

            <include layout="@layout/line_gray"></include>

            <RelativeLayout
                android:id="@+id/rl_normal"
                style="@style/VG_padding">

                <TextView
                    style="@style/TV_VG_LEFT_WC"
                    android:text="通用" />


            </RelativeLayout>


            <include layout="@layout/line_gray"></include>
            <RelativeLayout
                android:id="@+id/rl_abount"
                style="@style/VG_padding">

                <TextView
                    style="@style/TV_VG_LEFT_WC"
                    android:text="关于" />


            </RelativeLayout>
            <include layout="@layout/line_gray"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_ui_margin_large"
                android:orientation="vertical">

                <include layout="@layout/line_gray"></include>

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_viewgroup_height"
                    android:background="@drawable/selector_bg_viewgroup_click4"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/tv_top_card"
                    android:textSize="@dimen/text_size_common_btn" />
                <include layout="@layout/line_gray"></include>
            </LinearLayout>
        </LinearLayout>


    </com.ytxd.spp.ui.views.SpringScrollView>


</LinearLayout>
