<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_ui_margin_small"
        android:paddingTop="@dimen/default_ui_margin_small">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp40"
                android:src="@color/img_bg" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_ui_margin_small"
                android:ellipsize="end"
                android:maxWidth="110dp"
                android:singleLine="true"
                android:text="@string/null_s"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_size_common_s" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥  "
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_now_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/text_size_common_s" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp2">

                    <TextView
                        android:id="@+id/tv_origin_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 0.0"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp12" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tv_origin_p"
                        android:layout_alignRight="@+id/tv_origin_p"
                        android:layout_centerVertical="true"
                        android:background="@color/gray"></View>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <include layout="@layout/layout_btn_add_good_number_no_ani"></include>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>