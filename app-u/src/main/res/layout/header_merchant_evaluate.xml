<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.36"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_merchant_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/sp34"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合评分"
                    android:textColor="@color/black_overlay2"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_ui_margin_great"
                android:layout_marginTop="@dimen/default_ui_margin_great"
                android:background="@color/line_gray"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.64"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_ui_margin_great"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_ui_margin"
                    android:text="配送服务"
                    android:textColor="@color/black_overlay2"
                    android:textSize="@dimen/sp10" />


                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/rb_distr"
                    app:mrb_progressBackgroundTint="@color/gray"
                    app:mrb_progressTint="#FFAA0C"
                    app:mrb_secondaryProgressTint="@color/gray"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:maxHeight="14dp"
                    android:minHeight="14dp"
                    android:rating="0"
                    android:stepSize="1"
                    android:max="5" />

                <TextView
                    android:id="@+id/tv_distr_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_ui_margin"
                    android:text="0.0"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_ui_margin"
                    android:text="商品评分"
                    android:textColor="@color/black_overlay2"
                    android:textSize="@dimen/sp10" />


                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/rb_good"
                    app:mrb_progressBackgroundTint="@color/gray"
                    app:mrb_progressTint="#FFAA0C"
                    app:mrb_secondaryProgressTint="@color/gray"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:maxHeight="14dp"
                    android:minHeight="14dp"
                    android:rating="0"
                    android:stepSize="1"
                    android:max="5" />

                <TextView
                    android:id="@+id/tv_good_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_ui_margin"
                    android:text="0.0"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>