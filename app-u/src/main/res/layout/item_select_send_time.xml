<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/selector_bg_viewgroup_click"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/drawable_padding"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginTop="@dimen/drawable_padding"
        android:text="19:30"
        android:textColor="@color/black_overlay2"
        android:textSize="@dimen/text_size_common_s" />

    <TextView
        android:id="@+id/tv_minus_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/drawable_padding"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginTop="@dimen/drawable_padding"
        android:text="30分钟后"
        android:textColor="@color/black_overlay2"
        android:textSize="@dimen/text_size_common_s" />

</LinearLayout>